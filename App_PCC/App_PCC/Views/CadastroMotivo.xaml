<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_PCC.Views.CadastroMotivo">
    <ContentPage.Content>
        <StackLayout>
            <Picker Title="Selecione o Setor" x:Name="pSetor" ItemDisplayBinding="{Binding set_st_desc}" HorizontalOptions="Start" />
            <Entry x:Name="etDesc" Placeholder="Motivo" />
            <StackLayout>
                <Button x:Name="btSalvar" Text="Cadastrar" Clicked="BtSalvar_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>