<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_PCC.Views.CadastroUsuario">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="etNome" Placeholder="Nome do Usuário" />
            <Entry x:Name="etLogin" Placeholder="RA" Keyboard="Numeric" />
            <Entry x:Name="etSenha" Placeholder="Senha" IsPassword="true" />
            <Entry x:Name="etEmail" Placeholder="E-mail"/>
            
            <StackLayout>
                <Button x:Name="btSalvar" Text="Cadastrar" Clicked="BtSalvar_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>